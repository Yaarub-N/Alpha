@model WebApp.Models.UserViewModel

<section id="add-user-modal" class="modal">
    <div class="card">
        <div class="card-header">
            <h3>Add Member</h3>
            <button type="button" class="btn-close" data-type="close" data-target="#add-user-modal"></button>
        </div>
        <div class="card-body">
            <form id="add-user-form" method="post" asp-controller="Users" asp-action="Create" novalidate>
                <div class="form-group">
                    <label asp-for="FirstName"></label>
                    <input asp-for="FirstName" class="form-input" />
                    <span asp-validation-for="FirstName" class="field-validation-error"></span>
                </div>
                <div class="form-group">
                    <label asp-for="LastName"></label>
                    <input asp-for="LastName" class="form-input" />
                    <span asp-validation-for="LastName" class="field-validation-error"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Email"></label>
                    <input asp-for="Email" class="form-input" />
                    <span asp-validation-for="Email" class="field-validation-error"></span>
                </div>
                <div class="form-group">
                    <label asp-for="PhoneNumber"></label>
                    <input asp-for="PhoneNumber" class="form-input" />
                    <span asp-validation-for="PhoneNumber" class="field-validation-error"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Role"></label>
                    <input asp-for="Role" class="form-input" />
                    <span asp-validation-for="Role" class="field-validation-error"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Password"></label>
                    <input asp-for="Password" class="form-input" type="password" />
                    <span asp-validation-for="Password" class="field-validation-error"></span>
                </div>

                <button type="submit" class="btn btn-blue btn-submit">Create</button>
            </form>
        </div>
    </div>
</section>
